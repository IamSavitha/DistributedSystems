          "raw": "{{baseUrl}}/api/tasks?page=1&limit=10&sort=-createdAt&status=&priority=&category=&dueFrom=&dueTo=&q=",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks"
          ],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "sort",
              "value": "-createdAt"
            },
            {
              "key": "status",
              "value": ""
            },
            {
              "key": "priority",
              "value": ""
            },
            {
              "key": "category",
              "value": ""
            },
            {
              "key": "dueFrom",
              "value": ""
            },
            {
              "key": "dueTo",
              "value": ""
            },
            {
              "key": "q",
              "value": ""
            }
          ]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Buy milk\",\n  \"description\": \"2% milk for the week\",\n  \"status\": \"pending\",\n  \"priority\": \"medium\",\n  \"dueDate\": \"2025-10-25\",\n  \"category\": \"Shopping\"\n}"
        },
        "url": "{{baseUrl}}/api/tasks"
      }
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      }
    },
    {
      "name": "Update Task by ID",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Buy milk (updated)\",\n  \"status\": \"in-progress\",\n  \"priority\": \"high\"\n}"
        },
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      }
    },
    {
      "name": "Delete Task by ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      }
    }
