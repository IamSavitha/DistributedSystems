<div class="row g-4">
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h4">Contact</h2>
          <address class="mb-0">
            <p class="mb-1">Email: <a href="mailto:ads@sjsu.edu">ads@sjsu.edu</a></p>
            <p class="mb-0">Location: San Jose, California</p>
          </address>
        </div>
      </div>
    </div>
  
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5">Feedback</h2>
          <form id="feedbackForm" novalidate>
            <div class="mb-3">
              <label class="form-label">Your Name</label>
              <input name="name" class="form-control" required placeholder="Savitha Vijayarangan">
            </div>
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input name="email" type="email" class="form-control" required placeholder="you@sjsu.edu">
            </div>
            <div class="mb-3">
              <label class="form-label">Message</label>
              <textarea name="message" rows="3" class="form-control" required placeholder="Write your message..."></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Send</button>
            <p id="formMsg" class="form-text mt-2" role="status" aria-live="polite"></p>
          </form>
        </div>
      </div>
    </div>
  </div>
  