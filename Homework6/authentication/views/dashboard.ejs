<div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h4 mb-3">Dashboard</h1>
  
          <% if (msg) { %>
            <div class="alert alert-<%= msg.type %>"><%= msg.text %></div>
          <% } %>
  
          <p class="mb-2">Welcome, <strong><%= user?.name %></strong>! This route is protected by sessions.</p>
          <ul class="mb-0">
            <li>Your username: <code><%= user?.username %></code></li>
            <li>Login state persists via <code>express-session</code>.</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  